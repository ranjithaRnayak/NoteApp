@model NotesApp.Models.Note
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>
    <label asp-for="Title"></label><br />
    <input asp-for="Title" />
    <span asp-validation-for="Title" style="color:red"></span>
</p>

<p>
    <label asp-for="Content"></label><br />
    <textarea asp-for="Content" rows="4"></textarea>
    <span asp-validation-for="Content" style="color:red"></span>
</p>

<p>
    <label asp-for="Priority"></label><br />
    <select asp-for="Priority">
        <option value="0">Low</option>
        <option value="1">Medium</option>
        <option value="2">High</option>
    </select>
</p>

<p>
    @* <label hidden="hidden" asp-for="CategoryId"></label><br /> *@
    <input  type="hidden"asp-for="CategoryId" />
</p>

<p>
    <input type="hidden" asp-for="IsArchived" /> 
    @* <label  type="hidden" asp-for="IsArchived"></label> *@
</p>
